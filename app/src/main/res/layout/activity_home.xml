<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="32dp"
        tools:context=".ui.HomeActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Explicit Intent's"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:typeface="serif"
                    android:textSize="20sp"
                    />
                <Button
                    android:id="@+id/btnIntentWithData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Intent with Simple Data"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:backgroundTint="#00E676"
                    />
                <Button
                    android:id="@+id/btnIntentWithBundle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Intent Using Bundle"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:backgroundTint="#00E676"
                    />
                <Button
                    android:id="@+id/btnIntentWithParcelableData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Intent with Parcelable data"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:backgroundTint="#00E676"
                    />
                <Button
                    android:id="@+id/btnIntentWithSerializableData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Intent with Serializable data"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:backgroundTint="#00E676"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Implicit Intent's"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:typeface="serif"
                    android:textSize="20sp"
                    />
                <Button
                    android:id="@+id/btnOpenUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Opening Url"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:backgroundTint="#00E676"
                    />

                <Button
                    android:id="@+id/btnShareText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Sharing Text"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:backgroundTint="#00E676"
                    />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>